{
  "name": "Lynks-server",
  "version": "1.0.0",
  "description": "MERN template",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "watch": "npm run kill && nodemon server.js",
    "kill": "kill-port 3001",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "start:dev": "npm run kill && nodemon server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clam1987/Lynks-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/clam1987/Lynks-server/issues"
  },
  "homepage": "https://github.com/clam1987/Lynks-server#readme",
  "devDependencies": {
    "kill-port": "^1.6.1",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.13",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0"
  }
}
